.language
	z-index 5
	.box
		display flex
		justify-content center
		align-items center
		height 100vh
	
	&__items
		display flex
		min-width 545px
		
	&__item
		color #ffffff
		font-size 26px
		font-weight 500
		line-height 18px
		position relative
		margin-right 56px
		cursor pointer
		display none
		&:before
			content ''
			z-index 2
			width 100%
			height 3px
			bottom -9px
			position absolute
			background-color #ad9462
			t()
		&:hover
			&:before
				bottom 5px
				background-color #ad9462
		&:last-child
			margin-right 0
	&__banner
		text-align center
		color #ffffff
		font-size 32px
		position absolute
		top 300px
		left 100px
		right 100px
		display none
	
	&__last
		display none
		padding 0 100px
	
	&__text
		color #ad9462
		font-size 48px
		line-height 48px
		span
			margin-top 6px
			font-size 30px
			color white
	
	&__buttons
		display flex
		justify-content flex-end
		align-items center
		width 100%
		margin-top 70px
	
	&__button
		&-form
			padding 18px 28px
			border-radius 50px
			background-color #ad9462
			color white
			font-size 18px
			cursor pointer
			t()
			&:hover
				background-color #8a7447
				
		&-wrap
			display flex
			border-bottom 3px solid #ad9462
			padding-bottom 2px
			margin-right 34px
			cursor pointer
			t()
			&:hover
				border-bottom 3px solid transparent
		
		&-text
			color white
			padding-top 2px
			font-size 20px


