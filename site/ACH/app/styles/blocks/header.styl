.header
	position absolute
	width 100%
	z-index 20
	width 100%
	height 84px
	padding 35px 0
	top 0
	left 0
	transform translateY(-100px)
	transition 0.4s transform
	&--open
		transform translateY(0)
	.box
		display flex
		justify-content space-between
	&__logo
		cursor pointer
	&__nav
		&-list
			display flex
			padding-top 16px
		&-item
			color #ececec
			font-weight 400
			text-transform uppercase
			letter-spacing 7.04px
			font-size 16px
			margin-right 42px
			cursor pointer
			position relative
			t()
			&:last-child
				margin-right 0
			&:before
				content ''
				position absolute
				width 0
				height 2px
				background-color #ad9462
				top 7px
				left 1px
				t()
			&:hover
				color #ad9462
				&:before
					width 93%
			&--active
				color #ad9462
				&:before
					width 93%